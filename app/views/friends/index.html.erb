<% if user_signed_in? %>
  <div class="card">
    <div class="card-header">
      <h4> List of all the friends </h4>
    </div>
    <div class="card-body">
      <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Contact</th>
          <th scope="col">LinkedIn</th>
          <th scope="col">Show friend</th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <% if friend.user == current_user %>
            <tr>
              <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
              <td><%= friend.Email %></td>
              <td><%= friend.contact_number %></td>
              <td><%= friend.linkedIn %></td>
              <td><%= link_to "Show this friend", friend , class: "btn btn-outline-secondary"%></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
      </table>
      <br/>
      <%= link_to "New friend", new_friend_path, class:"btn btn-secondary"%>
    </div>
  </div>
<% else %>
<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        .please_sign_in-text {
            position: absolute;
            top: 35%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: black; /* Change the text color as needed */
            font-size: 2em; /* Change the font size as needed */
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="please_sign_in-text">
        <strong>
          <h3> Please sign in to view friends list</h3>
        </strong>
        <%= link_to  new_user_session_path do %>
          <i class="bi bi-box-arrow-in-right"></i>
        <% end %>
    </div>
</body>
</html>
<% end %>


       