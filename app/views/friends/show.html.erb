<div class="jumbotron">
  <h1 class="display-4">
    <%= @friend.first_name%>
    <%= @friend.last_name%>
  </h1>
  <p class="lead">
    <%= @friend.Email%> | <%= @friend.contact_number%> | <%= @friend.linkedIn%>
  </p>
  <hr class="my-4">
  <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-primary btn-lg" %>
  <%= link_to "Back", friends_path, class:"btn btn-light btn-lg" %>
  <br/><br/>
</div>

<div style = "padding: 10px;">
  <%= button_to "Delete this friend", @friend, method: :delete, class:"btn btn-outline-danger btn-lg", data: { turbo_confirm: "Are you sure you want to delete this friend ?" } %> 
</div>